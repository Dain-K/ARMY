<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:backgroundTint="@color/white"
    android:background="@color/white"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <ImageView
            android:layout_width="390dp"
            android:layout_height="53dp"
            android:layout_weight="8"
            android:src="@drawable/logo"
            tools:ignore="InefficientWeight,NestedWeights" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:background="@drawable/bg_gis_result_items_count"
            android:id="@+id/tbResultItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110px"
            android:textColor="#ffffff"
            android:textSize="32px"
            android:text="해병대 제 6여단"
            tools:ignore="PxUsage,RtlHardcoded" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="남승현"
            android:textColor="@color/black"
            android:textSize="44px"
            android:textStyle="bold"
            tools:ignore="PxUsage,RtlHardcoded" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="30px"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:text="21912216"
            android:textColor="@color/black"
            android:textSize="44px"
            android:textStyle="bold"
            tools:ignore="PxUsage" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:gravity="center">
        <View
            android:background="@color/gray"
            android:layout_width="330dp"
            android:layout_height="3px"
            tools:ignore="PxUsage" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10">

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/report_list_date"
            android:background="@color/blue_700"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_blue"
            android:gravity="center"
            android:hint="@string/report_date" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/report_list_time"
            android:background="@color/blue_700"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_blue"
            android:gravity="center"
            android:hint="@string/report_list_time_explain" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/report_list_title"
            android:background="@color/blue_700"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_blue"
            android:gravity="center"
            android:hint="보고 내용" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_marginTop="2dp">

        <TextView
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <TextView
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:gravity="center"
            android:text="@string/report_list_location"
            android:background="@color/blue_700"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:ignore="PxUsage" />

        <TextView
            android:layout_width="211dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_blue"
            android:gravity="center"
            android:hint="@string/report_list_location" />

    </LinearLayout>








    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:ignore="NestedWeights" />

        <Button
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="8"
            android:autoSizeTextType="uniform"
            android:backgroundTint="@color/blue_main"
            android:text="@string/report_button"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>